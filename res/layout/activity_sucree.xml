<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sucree">

    <View
        android:id="@+id/whiteStrip1"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="#E1DFDF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/white"
        android:backgroundTint="#00FFFFFF"
        android:fontFamily="@font/lobster"
        android:gravity="center"
        android:text="SucrÃ©e"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/whiteStrip1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/whiteStrip1" />

    <ImageView
        android:id="@+id/fondant"
        android:layout_width="233dp"
        android:layout_height="154dp"
        android:layout_marginStart="-120dp"
        android:layout_marginTop="84dp"
        android:src="@drawable/fondant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/whiteStrip1" />

    <ImageView
        android:id="@+id/tiramisu"
        android:layout_width="233dp"
        android:layout_height="154dp"
        android:layout_marginStart="-120dp"
        android:layout_marginTop="26dp"
        android:src="@drawable/tiramisu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fondant" />
    <ImageView
        android:id="@+id/cake"
        android:layout_width="233dp"
        android:layout_height="154dp"
        android:layout_marginStart="-120dp"
        android:layout_marginTop="26dp"
        android:src="@drawable/cakecitron"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tiramisu" />

    <TextView
        android:id="@+id/FondantText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="208dp"
        android:layout_marginRight="24dp"
        android:fontFamily="@font/lobster"
        android:text="Fondant au chocolat"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/whiteStrip1" />

    <Button
        android:id="@+id/btnFondant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:backgroundTint="#6AC14B4B"
        android:text="Commencer"
        app:layout_constraintEnd_toEndOf="@id/FondantText"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/FondantText"
        app:layout_constraintTop_toTopOf="@id/FondantText" />

    <TextView
        android:id="@+id/TiramisuText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="152dp"
        android:layout_marginRight="52dp"
        android:fontFamily="@font/lobster"
        android:text="Tiramisu"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/FondantText" />

    <Button
        android:id="@+id/btnTiramisu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:backgroundTint="#6AC14B4B"
        android:text="Commencer"
        app:layout_constraintEnd_toEndOf="@id/TiramisuText"
        app:layout_constraintStart_toStartOf="@id/TiramisuText"
        app:layout_constraintTop_toTopOf="@id/TiramisuText" />

    <TextView
        android:id="@+id/cakeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="196dp"
        android:layout_marginRight="36dp"
        android:fontFamily="@font/lobster"
        android:text="Cake au citron"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/TiramisuText" />

    <Button
        android:id="@+id/btnCakeCitron"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:backgroundTint="#6AC14B4B"
        android:text="Commencer"
        app:layout_constraintEnd_toEndOf="@id/cakeText"
        app:layout_constraintStart_toStartOf="@id/cakeText"
        app:layout_constraintTop_toTopOf="@id/cakeText" />

    <ImageButton
        android:id="@+id/btnRetour"
        android:layout_width="58dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#00FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023"
        android:contentDescription="Retour"
        app:srcCompat="@drawable/baseline_keyboard_backspace_24" />



</androidx.constraintlayout.widget.ConstraintLayout>