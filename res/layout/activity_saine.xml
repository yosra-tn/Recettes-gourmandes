<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sucree">

    <View
        android:id="@+id/whiteStrip3"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="#E1DFDF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/saine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@color/white"
        android:backgroundTint="#00FFFFFF"
        android:fontFamily="@font/lobster"
        android:gravity="center"
        android:text="Saine"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.524"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04" />

    <ImageView
        android:id="@+id/salade"
        android:layout_width="233dp"
        android:layout_height="154dp"
        android:layout_marginStart="-120dp"
        android:layout_marginTop="84dp"
        android:src="@drawable/salade"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/whiteStrip3" />

    <ImageView
        android:id="@+id/soupe"
        android:layout_width="233dp"
        android:layout_height="154dp"
        android:layout_marginStart="-120dp"
        android:layout_marginTop="26dp"
        android:src="@drawable/soupe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/salade" />
    <ImageView
        android:id="@+id/cakeHealthy"
        android:layout_width="233dp"
        android:layout_height="154dp"
        android:layout_marginStart="-120dp"
        android:layout_marginTop="26dp"
        android:src="@drawable/healthycake"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/soupe" />

    <TextView
        android:id="@+id/SaladeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="208dp"
        android:layout_marginRight="64dp"
        android:fontFamily="@font/lobster"
        android:text="Salade"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/whiteStrip3" />

    <Button
        android:id="@+id/btnSalade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:backgroundTint="#6AC14B4B"
        android:text="Commencer"
        app:layout_constraintEnd_toEndOf="@id/SaladeText"
        app:layout_constraintHorizontal_bias="0.367"
        app:layout_constraintStart_toStartOf="@id/SaladeText"
        app:layout_constraintTop_toTopOf="@id/SaladeText" />

    <TextView
        android:id="@+id/SoupeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="152dp"
        android:layout_marginRight="52dp"
        android:fontFamily="@font/lobster"
        android:text="Soupe"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/SaladeText" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:backgroundTint="#6AC14B4B"
        android:text="Commencer"
        app:layout_constraintEnd_toEndOf="@id/SoupeText"
        app:layout_constraintStart_toStartOf="@id/SoupeText"
        app:layout_constraintTop_toTopOf="@id/SoupeText" />

    <TextView
        android:id="@+id/healthycakeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="188dp"
        android:layout_marginRight="44dp"
        android:fontFamily="@font/lobster"
        android:text="Healthy Cake"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/SoupeText" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:backgroundTint="#6AC14B4B"
        android:text="Commencer"
        app:layout_constraintEnd_toEndOf="@id/healthycakeText"
        app:layout_constraintHorizontal_bias="0.264"
        app:layout_constraintStart_toStartOf="@id/healthycakeText"
        app:layout_constraintTop_toTopOf="@id/healthycakeText" />

    <ImageButton
        android:id="@+id/btnRetour"
        android:layout_width="58dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#00FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="Retour"
        app:srcCompat="@drawable/baseline_keyboard_backspace_24" />

    <ImageButton
        android:id="@+id/btnMenu"
        android:layout_width="58dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#00FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.164"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="Menu"
        app:srcCompat="@drawable/baseline_menu_24" />


</androidx.constraintlayout.widget.ConstraintLayout>