        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.73" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2) Sur une planche de cuisine, découpez en petits cubes le poulet. Faites-les revenir dans un poêle avec un filet d'huile d'olive. Retirez la coquille de l’œuf et découpez-le également en cubes, ainsi que le fromage et les tomates. Mélangez dans un saladier toutes les découpes en cubes avec les blancs de poulet cuits, puis relevez le goût de votre salade verte en arrosant l'ensemble de 5 c. à soupe de sauce soja."
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.924" />

    <TextView
