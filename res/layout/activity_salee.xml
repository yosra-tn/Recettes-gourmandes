<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#00FFFFFF"
    tools:context=".sucree">

    <View
        android:id="@+id/whiteStrip2"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="#E1DFDF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/salee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@color/white"
        android:backgroundTint="#00FFFFFF"
        android:fontFamily="@font/lobster"
        android:gravity="center"
        android:text="SalÃ©e"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.524"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.034" />

    <ImageView
        android:id="@+id/lasagne"
        android:layout_width="233dp"
        android:layout_height="154dp"
        android:layout_marginStart="-120dp"
        android:layout_marginTop="84dp"
        android:src="@drawable/lasagne"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/whiteStrip2" />

    <ImageView
        android:id="@+id/spaghetti"
        android:layout_width="233dp"
        android:layout_height="154dp"
        android:layout_marginStart="-120dp"
        android:layout_marginTop="26dp"
        android:src="@drawable/bolognaise"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lasagne" />

    <ImageView
        android:id="@+id/cake"
        android:layout_width="233dp"
        android:layout_height="154dp"
        android:layout_marginStart="-120dp"
        android:layout_marginTop="26dp"
        android:backgroundTint="#0AFFFFFF"
        android:src="@drawable/pizza"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spaghetti" />

    <TextView
        android:id="@+id/LasagneText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="192dp"
        android:layout_marginRight="56dp"
        android:fontFamily="@font/lobster"
        android:text="Lasagne"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/whiteStrip2" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:backgroundTint="#6AC14B4B"
        android:text="Commencer"
        app:layout_constraintEnd_toEndOf="@id/LasagneText"
        app:layout_constraintStart_toStartOf="@id/LasagneText"
        app:layout_constraintTop_toTopOf="@id/LasagneText" />

    <TextView
        android:id="@+id/SpaghettiText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="152dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/lobster"
        android:text="Spaghetti Bolognaise"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/LasagneText" />

    <Button
        android:id="@+id/btnPizza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:backgroundTint="#6AC14B4B"
        android:text="Commencer"
        app:layout_constraintEnd_toEndOf="@id/SpaghettiText"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/SpaghettiText"
        app:layout_constraintTop_toTopOf="@id/SpaghettiText" />

    <TextView
        android:id="@+id/PizzaText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="188dp"
        android:layout_marginRight="60dp"
        android:fontFamily="@font/lobster"
        android:text="Pizza"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/SpaghettiText" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:backgroundTint="#6AC14B4B"
        android:text="Commencer"
        app:layout_constraintEnd_toEndOf="@id/PizzaText"
        app:layout_constraintHorizontal_bias="0.541"
        app:layout_constraintStart_toStartOf="@id/PizzaText"
        app:layout_constraintTop_toTopOf="@id/PizzaText" />

    <ImageButton
        android:id="@+id/btnRetour"
        android:layout_width="58dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#00FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="Retour"
        app:srcCompat="@drawable/baseline_keyboard_backspace_24" />

</androidx.constraintlayout.widget.ConstraintLayout>